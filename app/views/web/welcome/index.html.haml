.row-fluid
  .span8
    %h1= t '.last_messages'
    %table.table.table-hover.mail_applications
      - @messages.each do |message|
        %tr
          %td.clicked
            .span5
              %a{ :href => AngularUrlHelpers::mail_message_path(message), :title => "Meet the Team" }
                %strong= message.subject
              %div
                = t(".sender")
                = message.sender
              %div
                = t(".recipient")
                = message.recipient
          %td.clicked
            .pull-left= message.completed_at
  .span3
    .well
      %p= link_to t(".new_application"), AngularUrlHelpers::new_mail_application_path, class: "btn btn-success btn-large btn-block"
      %h6.table-header
        = t(".mail applications")

      %table.table.table-hover
        - @mail_applications.each do |app|
          %tr
            %td= link_to app, AngularUrlHelpers::mail_application_path(app)

            %td
              - if app.unread_mails_count > 0
                %span.badge.badge-info.pull-right
                  = app.unread_mails_count